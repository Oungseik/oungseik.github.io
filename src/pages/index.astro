---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Projects from "../components/Projects.astro";
import SkillsAndExperiences from "../components/SkillsAndExperiences.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			[data-theme="dark"] .hero-section {
				background-image: url("Hexagon.svg");
			}
			[data-theme="light"] .hero-section {
				background-image: url("HexagonLight.svg");
			}
			@media (prefers-color-scheme: dark) {
				.hero-section {
					background-image: url("Hexagon.svg");
				}
			}
			@media (prefers-color-scheme: light) {
				.hero-section {
					background-image: url("HexagonLight.svg");
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<section class="hero-section min-h-dvh bg-cover md:bg-center">
			<main class="grid place-content-center px-4 pt-40 md:pt-48">
				<div class="rounded-lg bg-base-100 p-8 px-2 text-center md:max-w-3xl md:px-12 md:py-12">
					<div class="font-bold">
						<h1 class="text-3xl text-info md:text-5xl">
							Hi, I'm <span>Oung Seik Nyan</span>
						</h1>
						<h2 class="mt-2 text-lg md:text-2xl">
							Full-Stack Developer | Problem Solver | Tech Enthusiast
						</h2>
					</div>
					<div class="mt-6 md:mt-8">
						<p>
							I specialize in building robust, scalable web applications and delivering type-safe,
							maintainable solutions with JavaScript/TypeScript ecosystem.
						</p>
						<p>
							Passionate about functional programming, Linux systems, and system programming
							languages. Let's collaborate to build something extraordinary!
						</p>

						<div class="mt-6 flex justify-center gap-4 md:mt-8 md:gap-8">
							<a href="/#projects" class="btn btn-outline btn-info">Explore my work</a>
							<a href="/#contact" class="btn btn-outline">Get in touch</a>
						</div>
					</div>
				</div>
			</main>
		</section>

		<Projects />
		<SkillsAndExperiences />
		<Footer />
	</body>
</html>
